<p id="notice"><%= notice %></p>

<h1>メッセージ一覧</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.content %></td>
        <td><%= link_to message.user.name, me_profile_path %></td>
        <td><%= link_to '編集', edit_message_path(message) %></td>
        <td><%= link_to '削除', message, method: :delete, data: { confirm: '本当に削除して良いですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'メッセージ新規作成', new_message_path %>
